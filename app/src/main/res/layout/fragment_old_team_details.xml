<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cardview_light_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newCourseDetailsAppBar"

        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/oldTeamDetailsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:layout_gravity="start" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                app:backgroundTint="@color/yellow"
                android:layout_gravity="end" />
        </com.google.android.material.appbar.MaterialToolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonOne"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonTwo"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonThree"
                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:id="@+id/detailimageView1"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/detailimageView2"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/detailimageView3"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonFour"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonFive"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPokemonSix"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detailimageView4"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/detailimageView5"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/detailimageView6"
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>




            </LinearLayout>

        </ScrollView>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>